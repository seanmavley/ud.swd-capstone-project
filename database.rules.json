{
  "rules": {
    "codes": {
      ".read": "true",
      ".write": "auth.uid != null",
      ".indexOn": ["createdAt", "uid"]
    },
    "snippets": {
      ".read": "true",
      "$snipId": {
        ".write":"true",
        "$language": {
          ".write": "(!data.exists() && newData.child('uid').val() == auth.uid ) || (data.child('uid').val() == newData.child('uid').val())"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid && !data.exists()"
      }
    },
    "languages": {
      ".write": "auth.uid != null && auth.email == 'seanmavley@gmail.com'",
      ".read": "true"
    },
    "revision": {
      ".write": "true",
      ".read": "true"
    }
  }
}
